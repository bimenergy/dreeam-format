{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "root",
  "type": "object",
  "title": "DREEAM format v0.0.2",
  "description": "A building stock repository data model used for energy measure scenarios",
  "additionalProperties": false,
  "required": ["projects", "buildings", "resourceList", "indicators"],
  "properties": {
    "buildings": {
      "type": "array",
      "items": {
        "$ref": "building"
      }
    },
    "alternatives": {
      "type": "array",
      "items": {
        "$ref": "alternative"
      }
    },
    "scenarios": {
      "type": "array",
      "items": {
        "$ref": "scenario"
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "$ref": "project"
      }
    },
    "resourceList": {
      "$ref": "resourceList"
    },
    "indicators": {
      "type": "array",
      "items": {
        "$ref": "indicator"
      }
    }
  },
  "definitions": {
    "project": {
      "$id": "project",
      "title": "Project",
      "type": "object"
    },
    "scenario": {
      "$id": "scenario",
      "title": "Scenario",
      "type": "object",
      "properties": {
        "alternatives": {
          "type": "array",
          "items": {
            "$ref": "alternative"
          }
        }
      }
    },
    "building": {
      "$ref": "building"
    },
    "alternative": {
      "$id": "alternative",
      "title": "Alternative",
      "type": "object",
      "allOf": [
        {
          "$ref": "building"
        },
        {
          "properties": {
            "originalBuildingId": {
              "type": "string"
            }
          }
        }
      ]
    },
    "resourceList": {
      "$id": "resourceList",
      "title": "Resource List",
      "type": "object",
      "properties": {
        "constructions": {
          "type": "array",
          "items": {
            "$ref": "construction"
          }
        },
        "materials": {
          "type": "array",
          "items": {
            "$ref": "solidMaterial"
          }
        },
        "heatPumps": {
          "type": "array",
          "items": {
            "$ref": "heatPump"
          }
        },
        "mechanicalVentilations": {
          "type": "array",
          "items": {
            "$ref": "mechanicalVentilation"
          }
        },
        "genericEnergyConversionSystems": {
          "type": "array",
          "items": {
            "$ref": "genericEnergyConversionSystem"
          }
        },
        "boilers": {
          "type": "array",
          "items": {
            "$ref": "boiler"
          }
        },
        "chillers": {
          "type": "array",
          "items": {
            "$ref": "chiller"
          }
        },
        "photovoltaicSystems": {
          "type": "array",
          "items": {
            "$ref": "photovoltaicSystem"
          }
        },
        "solarThermalSystems": {
          "type": "array",
          "items": {
            "$ref": "solarThermalSystem"
          }
        },
        "weatherScenarios": {
          "type": "array",
          "items": {
            "$ref": "weatherData"
          }
        }
      }
    },
    "construction": {
      "$id": "construction",
      "title": "Construction",
      "description": "Simple version with U-values, etc. or layered structure defining materials",
      "type": "object",
      "properties": {
        "uValue": {
          "$id": "uValue",
          "type": "number",
          "title": "U-Value"
        },
        "layers": {
          "type": "array",
          "items": {
            "$ref": "layer"
          }
        }
      }
    },
    "layer": {
      "$id": "layer",
      "title": "Layer",
      "properties": {
        "layerComponents": {
          "type": "array",
          "items": {
            "$ref": "layerComponent"
          }
        }
      }
    },
    "layerComponent": {
      "$id": "layerComponent",
      "title": "Layer Component",
      "properties": {
        "solidMaterial": {
          "$ref": "solidMaterial"
        },
        "thickness": {
          "type": "number"
        }
      }  
    },
    "solidMaterial": {
      "$id": "solidMaterial",
      "type": "object",
      "title": "Material",
      "properties": {
        "conductivity": {
          "type": "number"
        },
        "density": {
          "type": "number"
        }, 
        "permeance": {
          "type": "number"
        },  
        "porosity": {
          "type": "number"
        },  
        "specificHeat": {
          "type": "number"
        },  
        "embodiedCarbon": {
          "type": "number"
        },   
        "embodiedEnergy": {
          "type": "number"
        } 
      }
    },
    "heatPump": {
      "$id": "heatPump",
      "type": "object",
      "title": "Heat pump",
      "description": "A device that transfers heat from a colder area to a hotter area by using mechanical energy, as in a refrigerator"
    },
    "mechanicalVentilation": {
      "$id": "mechanicalVentilation",
      "type": "object",
      "title": "Mechanical ventilation",
      "description": "A building ventilation system that uses powered fans or blowers to provide fresh air to rooms when the natural forces of air pressure and gravity are not enough to circulate air through a building"
    },
    "genericEnergyConversionSystem": {
      "$id": "genericEnergyConversionSystem",
      "type": "object",
      "title": "Generic Energy Conversion System",
      "description": "Energy conversion system which cannot be represented by other energy conversion systems"
    },
    "boiler": {
      "$id": "boiler",
      "type": "object",
      "title": "Boiler",
      "description": "Closed vessel in which water is heated"
    },
    "chiller": {
      "$id": "chiller",
      "type": "object",
      "title": "Chiller",
      "description": "A machine that removes heat from a liquid via a vapour-compression or absorption refrigeration cycle"
    },
    "photovoltaicSystem": {
      "$id": "photovoltaicSystem",
      "type": "object",
      "title": "Photovoltaic System",
      "description": "System converting solar energy in electricity"
    },
    "solarThermalSystem": {
      "$id": "solarThermalSystem",
      "type": "object",
      "title": "Solar Thermal System",
      "description": "System converting solar energy in heat (hot water)"
    },
    "weatherData": {
      "$id": "weatherData",
      "type": "object",
      "title": "Weater Data",
      "description": "Data structure to model weather or climate data at the location of a building"
    },
    "indicator": {
      "$id": "indicator",
      "title": "Indicator",
      "description": "A well defined value that is derived from the data model often by calculation",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "sufficient": {
          "type": "number"
        },
        "excellent": {
          "type": "number"
        },
        "allowed": {
          "type": "number"
        }
      }
    }
  }
}
